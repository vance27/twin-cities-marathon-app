generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Marker {
  id          Int      @id @default(autoincrement())
  name        String
  description String?
  latitude    Float
  longitude   Float
  distanceKm  Float    // Distance in kilometers from start
  raceTime    String?  // Race time at this marker (HH:MM:SS format)
  note        String?  // Optional note about the marker
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  @@map("markers")
}